<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <title>Pot Rud Uni</title>
    </head>
    <body>
        <div class="container">
            <h1>{{ course.getCourseName }}</h1>

            {% if students is not empty %}
                <p>Here are the students that are enrolled in {{ course.getCourseName }}:</p>
                <ul>
                    {% for student in students %}
                        <li>{{ student.getName }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <h4>Add a student for {{ course.getCourseName }}:</h4>

            <form action='/add_students' method='post'>
                <input id="course_id" name="course_id" type="hidden" value="{{ course.getId }}">
                <label for='student_id'>Select a student</label>
                <select id='student_id' name='student_id' type='text'>
                    {% for student in all_students %}
                        <option value="{{ student.getId }}"> {{ student.getName }} </option>
                    {% endfor %}
                </select>

                <button type='submit'>Add student</button>
            </form>

            <p><a href="/course/{{ course.getId }}/edit">Edit {{ course.getCourseName }}</a></p>

            <p><a href='/'>Home</a></p>



        </div>
    </body>
</html>
