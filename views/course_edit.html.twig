<html>
  <head>
    <title>Edit Course</title>
  </head>
  <body>
    <h1>Update {{ course.getCourseName }}</h1>

    <form action="/course/{{ course.getId }}" method="post">
      <input name="_method" type="hidden" value="patch">

      <label for="course_name">Rename your course:</label>
      <input id="course_name" name="course_name" type="text">

      <label for="number">Renumber your course!:</label>
      <input id="number" name="number" type="text">


      <button type="submit">Update</button>
    </form>
    <form action="/course/{{ course.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">

      <button type="submit">Delete {{ course.getCourseName }}</button>
    </form>
  </body>
</html>
